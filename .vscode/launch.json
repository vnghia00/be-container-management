    "version": "0.2.0",
    "configurations": [
        {
            "name": "Node: Nodemon in Docker",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "address": "localhost",
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/app",
            "sourceMapPathOverrides": {
                "/app/*": "${workspaceRoot}/*"
            },
            "restart": true,
        }
    ]
}